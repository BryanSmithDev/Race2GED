<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:background="@color/primary_color">

        <FrameLayout
            android:id="@+id/mainFrame"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/header_cover" >


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/contact_label"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/content_color"
                android:textSize="24sp"
                android:typeface="normal" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameBorder"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/secondary_color" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/header_cover">
            </FrameLayout>

        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" android:fadingEdge="vertical" android:fadingEdgeLength="25dp">

        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:id="@+id/programName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:shadowColor="@color/content_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="@string/footer_2_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/divider_color"
                android:minHeight="1dp" >

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/locality1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/locality1_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/content_color"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/primary_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2" />

                <TextView
                    android:id="@+id/locality1_subname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/locality1_subname"
                    android:textColor="#A3A3A3"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/locality1_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/default_button"
                        android:drawableLeft="@android:drawable/ic_menu_call"
                        android:paddingRight="5sp"
                        android:text="@string/locality1_phone"
                        android:textColor="@color/selector_text_inverse"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/locality1_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/default_button"
                        android:drawableLeft="@drawable/webiconsmall"
                        android:drawablePadding="3dp"
                        android:text="@string/website"
                        android:textColor="@color/selector_text_inverse"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/locality2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/locality2_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/content_color"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/primary_color"
	                android:shadowDx="2"
	                android:shadowDy="2"
	                android:shadowRadius="2" />

                <TextView
                    android:id="@+id/locality2_subname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/locality2_subname"
                    android:textColor="#A3A3A3"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/locality2_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/default_button"
                        android:drawableLeft="@android:drawable/ic_menu_call"
                        android:paddingRight="5sp"
                        android:text="@string/locality2_phone"
                        android:textColor="@color/selector_text_inverse"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/locality2_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/default_button"
                        android:drawableLeft="@drawable/webiconsmall"
                        android:drawablePadding="3dp"
                        android:text="@string/website"
                        android:textColor="@color/selector_text_inverse"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/locality3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/locality3_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/content_color"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/primary_color"
	                android:shadowDx="2"
	                android:shadowDy="2"
	                android:shadowRadius="2" />

                <TextView
                    android:id="@+id/locality3_subname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/locality3_subname"
                    android:textColor="#A3A3A3"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/locality3_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/default_button"
                        android:drawableLeft="@android:drawable/ic_menu_call"
                        android:paddingRight="5sp"
                        android:text="@string/locality3_phone"
                        android:textColor="@color/selector_text_inverse"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/locality3_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/default_button"
                        android:drawableLeft="@drawable/webiconsmall"
                        android:drawablePadding="3dp"
                        android:text="@string/website"
                        android:textColor="@color/selector_text_inverse"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/locality4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/locality4_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/content_color"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/primary_color"
	                android:shadowDx="2"
	                android:shadowDy="2"
	                android:shadowRadius="2" />

                <TextView
                    android:id="@+id/locality4_subname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/locality4_subname"
                    android:textColor="#A3A3A3"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/locality4_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/default_button"
                        android:drawableLeft="@android:drawable/ic_menu_call"
                        android:paddingRight="5sp"
                        android:text="@string/locality4_phone"
                        android:textColor="@color/selector_text_inverse"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/locality4_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/default_button"
                        android:drawableLeft="@drawable/webiconsmall"
                        android:drawablePadding="3dp"
                        android:text="@string/website"
                        android:textColor="@color/selector_text_inverse"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/divider_color"
                android:minHeight="1dp" >
            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/facebook"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/facebook"
                    android:scaleType="centerInside"
                    android:src="@drawable/fb" />

                <ImageButton
                    android:id="@+id/webIcon"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/website"
                    android:scaleType="centerInside"
                    android:src="@drawable/webicon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/footer"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text="@string/versionLbl"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/disclaimer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disclaimer_text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>